<% if @subscription.errors.any? %>
  <% @subscription.errors.full_messages.each do |message| %>
    console.log('<%= j message %>');
  <% end %>
<% else %>
  $('#button_subscribe').remove();
  $('div.subscription').prepend(
    '<%= link_to "Cancel subscription", subscription_path(@subscription), method: :delete, remote: true, class: "btn btn-default pull-right", id: "button_unsubscribe"%>'
  );
<% end %>
