var id = <%= @answer.id %>
<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('div#answer-error-' + id).html('<%= j message %>');
  <% end %>
<% else %>
  <% publish_to "/answers_of_#{@answer.question.id}" do %>
    var id = <%= @answer.id %>
    $('#answer-row-' + id).html('<%= j render @answer %>');
  <% end %>
<% end %>
