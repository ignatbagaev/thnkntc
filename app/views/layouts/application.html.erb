<!DOCTYPE html>
<html>
<head>
  <title>Stckflw</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="navbar">
    <% if current_user %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'btn btn-default' %>
    <% else %>
      <% if request.original_fullpath != (new_user_session_path || user_session_path) %>
        <%= link_to "Sign in", new_user_session_path, class: 'btn btn-default' %>
      <% elsif request.original_fullpath != (new_user_registration_path || user_registration_path) %>
        <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-default' %>
      <% end %>
    <% end %>
  </div>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% elsif alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
